<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua"
    tools:context=".Paddygvt">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                      வணக்கம்
        நீங்கள் தங்களுடைய விதைகளை இங்கே விற்பனை செய்ய வேண்டும் என்றால் அதற்கு சில விதிகளை நீங்கள் பின்பற்றியிருக்க வேண்டும்.அவகளை காணலாம்.
    1.நீங்கள் இங்கே உங்கள் பெயரில் தனியாக ஒரு கணக்கு வைத்திருக்க வேண்டிய அவசியம் இல்லை.
    2.நீங்கள் உபயோகித்திருக்கும் விதைகளை எந்த நிறுவனங்களில் வேண்டுமானாலும்  வாங்கி பயன்படுத்தி இருக்கலாம்.
    3.சாதாரண நடைமுறை படி விவசாயம் செய்திருந்தால் போதுமானது.
    4.உங்களுடைய விதையின் நிலவரத்தை நீங்களே முடிவு செய்து கொள்ளலாம்.
    5.நீங்கள் விதைகளை விற்பனை செய்த அடுத்த நிமிடமே உங்களுடைய பணத்தை ரொக்கமாகவே பெற்றுக் கொள்ளலாம்..
           மேற்கண்ட 5 விதிகளும் உங்களுக்கு சம்மதம் என்றால் கீழே சமர்ப்பிக்கவும் இல்லை என்றால் ரத்து செய்யவும்.
                                                      நன்றி"

            android:textColor="@color/blue_violet"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="35dp"
            android:text="பதிவு செய்க"
            android:background="@drawable/background_login_button1"
            android:textColor="@color/greenYellow"/>

        <Button
            android:id="@+id/btnsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="35dp"
            android:text="தேடல்"
            android:background="@drawable/background_login_button1"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="35dp"
            android:text="ரத்து"
            android:background="@drawable/background_login_button1"
            android:textColor="@color/chocolate"/>

    </LinearLayout>
</ScrollView>